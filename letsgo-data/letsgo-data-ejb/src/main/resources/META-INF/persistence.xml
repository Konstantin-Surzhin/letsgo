<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="gamePU" transaction-type="JTA">
    <mapping-file>META-INF/orm.xml</mapping-file>
    <!-- <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>-->
    <jta-data-source>java:/jboss/datasources/MySQLDS</jta-data-source>
    <class>org.igo.ejb.entities.Event</class>
    <class>org.igo.ejb.entities.Role</class>
    <class>org.igo.ejb.entities.Place</class>
    <class>org.igo.ejb.entities.UserGame</class>
    <class>org.igo.ejb.entities.GameComment</class>
    <class>org.igo.ejb.entities.GameMove</class>
    <class>org.igo.ejb.entities.GameDate</class>
    <class>org.igo.ejb.entities.Room</class>
    <class>org.igo.ejb.entities.Degree</class>
    <class>org.igo.ejb.entities.UserDegree</class>
    <class>org.igo.ejb.entities.Game</class>
    <class>org.igo.ejb.entities.Ban</class>
    <class>org.igo.ejb.entities.User</class>
    <class>org.igo.ejb.entities.MoveComment</class>
    <class>org.igo.ejb.entities.League</class>
    <class>org.igo.ejb.entities.Team</class>
    <class>org.igo.ejb.entities.City</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
